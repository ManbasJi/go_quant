        no_transaction_num: 1.00
      },
      {
        type: 3,
        status: 1,
        time: '2019-09-17 10:12:23',
        commission_num: 1.00,
        commission_price: 1050.23,
        transaction_average_price: 1028.20,
        transaction_num: 1.00,
        no_transaction_num: 0.00
      },
      {
        type: 4,
        status: 2,
        time: '2019-09-17 10:12:23',
        commission_num: 1.00,
        commission_price: 1050.23,
        transaction_average_price: 1028.20,
        transaction_num: 0.63,
        no_transaction_num: 0.36
      },
      {
        type: 4,
        status: 0,
        time: '2019-09-17 10:12:23',
        commission_num: 1.00,
